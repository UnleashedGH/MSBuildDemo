<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>
  
  
  <Target Name="ZipFolder" AfterTargets="Build">
    
    <ZipDirectory
        SourceDirectory="$(OutputPath)"
        DestinationFile="$(MSBuildProjectDirectory)\output.zip" />
  </Target>

  <Target Name="Publish">
    <MSBuild Projects="$(ProjectFile)" Properties="Configuration=Release;OutputPath=$(Build);OutDir=$(Build)/"></MSBuild>
    <Exec Command="MSBuildDemo.exe  $(Build)\_PublishedWebsites\$(ProjectName) $(CopyTo) /e /is
      if %errorlevel% leq 4 exit 0 else exit %errorlevel%"/>
  </Target>


  <Target Name="CommitAndPush">
    <Exec Command="git add -A" />
    <Exec Command="git commit -m &quot;Automated build commit&quot;" />
    <Exec Command="git push" />
  </Target>
</Project>
